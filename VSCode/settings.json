/*
    TITLE: Custom VS Code ~ Settings
    AUTHOR: James Hanford
*/
{
    // Window
    "window.zoomLevel": -2,
    "window.titleBarStyle": "custom",

    // File Explorer & Workbench
    "explorer.compactFolders": false,
    "explorer.confirmDragAndDrop": false,
    "workbench.editor.closeEmptyGroups": true,

    // Terminal
    "terminal.integrated.shell.windows": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
    "terminal.integrated.rendererType": "dom",
    
    // Editor
    "editor.tabSize": 4,
    "editor.codeLens": true,
    "editor.accessibilitySupport": "off",
    "editor.renderWhitespace": "boundary",
    "breadcrumbs.enabled": true,

    "typescript.implementationsCodeLens.enabled": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "[javascript]": {
        "editor.tabSize": 4,
        "editor.formatOnPaste": true,
        "editor.autoClosingQuotes": "never"
    },
    "[json]": {
        "editor.tabSize": 4
    },
    "[typescript]": {
        "editor.tabSize": 4,
        "editor.formatOnPaste": true,
        "editor.autoClosingQuotes": "never"
    },
    "[yaml]": {
        "editor.tabSize": 4
    },

    // SCM
    "scm.defaultViewMode": "tree",
    "scm.alwaysShowRepositories": true,

    // Git
    "git.autofetch": true,
    "git.alwaysShowStagedChangesResourceGroup": true,
    "git.inputValidationLength": 72,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,

    // Git Lens
    "gitlens.currentLine.enabled": false,
    "gitlens.codeLens.authors.enabled": true,
    "gitlens.codeLens.recentChange.enabled": true,

    // PHP Settings
    "php.executablePath": "C:\\tools\\php55\\php.exe",
    "php.validate.enable": true,
    "php.validate.executablePath": "C:\\tools\\php55\\php.exe",
    "php.validate.run": "onType",

    // VS Icons
    "vsicons.projectDetection.autoReload": true,
    
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.columnSelection": false,
    
    "mssql.connections": [
        {
            "server": "localhost",
            "database": "",
            "authenticationType": "Integrated",
            "password": ""
        }
    ],

    // AWS CloudFormation & SAM
    "aws.samcli.location": "C:\\Program Files\\Amazon\\AWSSAMCLI\\bin\\sam.cmd",
    "yaml.customTags": [
        "!And",
        "!And sequence",
        "!If",
        "!If sequence",
        "!Not",
        "!Not sequence",
        "!Equals",
        "!Equals sequence",
        "!Or",
        "!Or sequence",
        "!FindInMap",
        "!FindInMap sequence",
        "!Base64",
        "!Join",
        "!Join sequence",
        "!Cidr",
        "!Ref",
        "!Sub",
        "!Sub sequence",
        "!GetAtt",
        "!GetAZs",
        "!ImportValue",
        "!ImportValue sequence",
        "!Select",
        "!Select sequence",
        "!Split",
        "!Split sequence"
    ],
    "yaml.validate": false
}